{
	"schemaVersion": 1,
	"id": "anshar",
	"version": "${version}",
	"name": "Anshar",
	"description": "Explore Beacon's connection to the Sky!",
	"authors": [
		"Lgmrszd",
		"hama",
		"comp500"
	],
	"contact": {
		"homepage": "https://fabricmc.net/",
		"sources": "https://github.com/FabricMC/fabric-example-mod"
	},
	"license": "LGPL-3.0-only",
	"icon": "assets/anshar/icon.png",
	"environment": "*",
	"entrypoints": {
		"main": [
			"com.lgmrszd.anshar.Anshar"
		],
		"client": [
